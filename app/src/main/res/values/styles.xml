<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowBackground">@color/backgroundDark</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/textColor</item>

        <item name="buttonStyle">@style/ButtonStyle</item>



    </style>


    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/buttonBackground</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/editTextColor</item>
        <item name="android:textColorHint">@color/editTextHintColor</item>
    </style>

    <style name="ButtonStyle2">
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/buttonTextColor</item>

    </style>


</resources>
